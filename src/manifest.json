{
  "manifest_version": 3,
  "name": "GPT-OTG",
  "version": "1.0",
  "description": "ASK AI anytime and anywhere",
  "permissions": ["activeTab", "tabs", "contextMenus", "storage"],
  "action": {
    "default_icon": "icon.png",
    "default_title": "Open"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.js"],
      "css": ["popup.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
