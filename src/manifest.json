{
  "manifest_version": 2,
  "name": "GPT-OTG",
  "version": "1.0",
  "description": "ASK AI anytime and anywhere",
  "permissions": ["activeTab", "tabs"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Open my React app"
  },
  "background": {
    "scripts": ["background.min.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.min.js"],
      "css": ["popup.min.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
