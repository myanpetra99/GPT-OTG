{
  "manifest_version": 3,
  "name": "GPT-OTG DEVELOPMENT BUILD",
  "version": "0.6.8",
  "description": "THIS EXTENSION IS FOR BETA TESTING",
  "permissions": [
    "activeTab",
    "contextMenus",
    "webNavigation",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.anthropic.com/*",
    "https://api.deepseek.com/*",
    "https://gpt-otg-websearch-api.vercel.app/*"
  ],
  "action": {
    "default_title": "Open"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "css": [
        "popup.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}